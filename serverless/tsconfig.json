{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": ".build",
    "rootDir": "./",
    "sourceMap": true
  },
  "include": ["functions/**/*", "lib/**/*"],
  "exclude": ["node_modules"]
}